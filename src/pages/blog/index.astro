---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

// Get blog posts sorted by publication date (newest first)
const posts = await getCollection("blog");
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
);
---

<Layout 
  title="Blog - Your Name" 
  description="Read my thoughts on design, development, and technology."
>
  <div class="pt-32 pb-10 md:pt-40 md:pb-16">
    <div class="container-custom">
      <h1 class="heading-lg mb-6 text-primary-600 dark:text-primary-400">Blog</h1>
      <p class="body-lg text-gray-600 dark:text-gray-400 max-w-3xl mb-12">
        I write about web development, design, technology, and my experiences as a developer. 
        Here are my latest thoughts and insights.
      </p>
      
      {sortedPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="card group hover:shadow-md transition-shadow duration-300">
              {post.data.coverImage && (
                <div class="relative overflow-hidden rounded-t-lg aspect-video">
                  <img 
                    src={post.data.coverImage} 
                    alt={post.data.title} 
                    class="w-full h-full object-cover object-center transition-transform duration-500 group-hover:scale-105"
                  />
                </div>
              )}
              
              <div class="p-6">
                <div class="flex gap-2 flex-wrap mb-3">
                  {post.data.tags.map((tag) => (
                    <span class="px-2 py-1 text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-200 rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
                
                <h2 class="heading-sm mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                  <a href={`/blog/${post.slug}`}>
                    {post.data.title}
                  </a>
                </h2>
                
                <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-3">
                  {post.data.excerpt}
                </p>
                
                <div class="flex items-center justify-between mt-4">
                  <time 
                    datetime={post.data.publishDate.toISOString()}
                    class="text-sm text-gray-500 dark:text-gray-500"
                  >
                    {new Date(post.data.publishDate).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  
                  <a 
                    href={`/blog/${post.slug}`} 
                    class="text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
                  >
                    Read more
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-12">
          <p class="text-gray-600 dark:text-gray-400">No blog posts available yet. Check back soon!</p>
        </div>
      )}
    </div>
  </div>
</Layout>