---
import Navigation from "./Navigation.astro";
---

<header
  class="fixed top-0 w-full z-50 border-b border-neutral-800/50"
>
  <!-- Header con fondo degradado y sutil desenfoque -->
  <div class="absolute inset-0 bg-neutral-950/80 backdrop-blur-sm"></div>
  
  <div class="container mx-auto px-6 md:px-8 flex items-center justify-between h-16 relative">
    <a
      href="/"
      class="font-bold text-xl text-neutral-200 flex items-center gap-2 relative group"
    >
      <!-- Elemento decorativo del logo -->
      <span class="absolute -bottom-1 left-0 w-0 h-px bg-neutral-400 transition-all duration-300 group-hover:w-full"></span>
      <span>Portfolio</span>
    </a>
    <Navigation />
  </div>
</header>
