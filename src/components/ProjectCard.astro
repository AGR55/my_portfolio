---
import { Icon } from "astro-icon/components";

interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  url: string;
  github?: string;
  live?: string;
}

const { title, description, image, tags, url, github, live } = Astro.props;
---

<article
  class="bg-white/50 dark:bg-neutral-800/50 rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 h-full transform hover:-translate-y-2 border border-neutral-100/50 dark:border-neutral-700/50 group"
  data-tags={tags.join(",")}
>
  <!-- Image container with overlay on hover -->
  <div class="relative overflow-hidden aspect-video">
    <img
      src={image}
      alt={`Screenshot of ${title}`}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end"
    >
      <div class="p-4 w-full flex justify-between items-center">
        <div class="flex gap-3">
          {
            github && (
              <a
                href={github}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-white/20 backdrop-blur-sm p-2 rounded-full hover:bg-white/40 transition-colors"
                aria-label="GitHub Repository"
              >
                <Icon name="mdi:github" class="h-5 w-5 text-white" />
              </a>
            )
          }
          {
            live && (
              <a
                href={live}
                target="_blank"
                rel="noopener noreferrer"
                class="bg-white/20 backdrop-blur-sm p-2 rounded-full hover:bg-white/40 transition-colors"
                aria-label="Live Demo"
              >
                <Icon name="lucide:external-link" class="h-5 w-5 text-white" />
              </a>
            )
          }
        </div>
        <a
          href={url}
          class="text-white text-sm font-medium flex items-center gap-1 hover:underline"
        >
          View details
          <Icon name="lucide:arrow-right" class="h-4 w-4" />
        </a>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-2">
      {title}
    </h3>
    <p class="text-neutral-600 dark:text-neutral-400 text-sm mb-4 line-clamp-2">
      {description}
    </p>
    <div class="flex flex-wrap gap-2">
      {
        tags.map((tag) => (
          <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-300">
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</article>
