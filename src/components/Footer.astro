---
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();
const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/yourusername",
    icon: "mdi:github",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/yourusername",
    icon: "mdi:linkedin",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/yourusername",
    icon: "mdi:twitter",
  },
  {
    name: "Instagram",
    url: "https://instagram.com/yourusername",
    icon: "mdi:instagram",
  },
];

const navigationLinks = [
  { name: "Home", url: "/" },
  { name: "About", url: "/#about" },
  { name: "Projects", url: "/#projects" },
  { name: "Blog", url: "/blog" },
  { name: "Contact", url: "/#contact" },
];
---

<footer
  class="relative border-t border-neutral-200 dark:border-neutral-700/50 overflow-hidden bg-gradient-to-b from-white to-neutral-50 dark:from-neutral-900 dark:to-neutral-900"
>
  <!-- Decorative background element -->
  <div
    class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/3 w-[40rem] h-[40rem] rounded-full bg-primary-100/30 dark:bg-primary-900/10 blur-3xl opacity-50 dark:opacity-20"
  >
  </div>

  <div class="container-custom relative z-10">
    <!-- Footer content area -->
    <div class="py-12 md:py-16">
      <!-- Main footer content in three columns -->
      <div class="grid grid-cols-1 md:grid-cols-12 gap-10">
        <!-- About column -->
        <div class="md:col-span-5">
          <!-- Logo/Name with subtle animation -->
          <div class="flex items-center gap-3 mb-5 group">
            <div
              class="h-10 w-1 bg-gradient-to-b from-primary-400 to-primary-600 rounded-full transform origin-bottom group-hover:scale-y-110 transition-transform duration-300"
            >
            </div>
            <span
              class="text-xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-neutral-900 to-neutral-700 dark:from-white dark:to-neutral-300"
            >
              Adriano Gonzalez Reyes
            </span>
          </div>

          <p
            class="text-neutral-600 dark:text-neutral-400 leading-relaxed mb-6 border-l-2 border-primary-100 dark:border-primary-900/50 pl-4"
          >
            A professional portfolio showcasing my work and expertise in design
            and development. I create beautiful, functional, and accessible web
            experiences with attention to detail.
          </p>
        </div>

        <!-- Navigation column -->
        <div class="md:col-span-3 md:col-start-7">
          <h3
            class="text-lg font-semibold mb-5 text-neutral-900 dark:text-white flex items-center"
          >
            <span
              class="inline-block h-6 w-6 mr-2 text-primary-500 dark:text-primary-400"
            >
              <Icon name="lucide:compass" class="h-6 w-6" />
            </span>
            Navigation
          </h3>
          <ul class="space-y-3">
            {
              navigationLinks.map((link) => (
                <li>
                  <a
                    href={link.url}
                    class="group flex items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                  >
                    <span class="w-2 h-0.5 bg-neutral-300 dark:bg-neutral-600 group-hover:bg-primary-600 dark:group-hover:bg-primary-400 group-hover:w-3 transition-all mr-2" />
                    <span class="group-hover:translate-x-0.5 transition-transform duration-200">
                      {link.name}
                    </span>
                  </a>
                </li>
              ))
            }
          </ul>
        </div>

        <!-- Social Media column -->
        <div class="md:col-span-3">
          <h3
            class="text-lg font-semibold mb-5 text-neutral-900 dark:text-white flex items-center"
          >
            <span
              class="inline-block h-6 w-6 mr-2 text-primary-500 dark:text-primary-400"
            >
              <Icon name="lucide:share-2" class="h-6 w-6" />
            </span>
            Connect
          </h3>
          <div class="flex flex-wrap items-center gap-3">
            {
              socialLinks.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group h-10 w-10 rounded-full flex items-center justify-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 hover:bg-primary-50 dark:hover:text-primary-400 dark:hover:bg-primary-900/20 transition-all border border-neutral-200 dark:border-neutral-700 shadow-sm hover:shadow-md hover:-translate-y-0.5 duration-300"
                  aria-label={link.name}
                >
                  <Icon
                    name={link.icon}
                    class="h-5 w-5 transform group-hover:scale-110 transition-transform"
                  />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Copyright bar -->
    <div
      class="py-6 border-t border-neutral-200 dark:border-neutral-700/50 flex flex-col sm:flex-row justify-between items-center gap-4"
    >
      <p class="text-sm text-neutral-500 dark:text-neutral-500">
        &copy; {currentYear} Adriano Gonzalez Reyes. All rights reserved.
      </p>

      <div class="flex items-center gap-6 text-sm">
        <a
          href="/privacy"
          class="text-neutral-500 hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:underline"
        >
          Privacy
        </a>
        <a
          href="/terms"
          class="text-neutral-500 hover:text-primary-600 dark:hover:text-primary-400 transition-colors hover:underline"
        >
          Terms
        </a>
        <span class="text-neutral-500 flex items-center gap-1">
          <span>Built with</span>
          <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-600 dark:text-primary-400 hover:underline flex items-center"
          >
            <Icon name="mdi:rocket-launch" class="h-4 w-4 mr-1" />
            Astro
          </a>
        </span>
      </div>
    </div>
  </div>
</footer>
