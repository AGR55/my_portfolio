---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: "GitHub", url: "https://github.com/yourusername" },
  { name: "LinkedIn", url: "https://linkedin.com/in/yourusername" },
  { name: "Twitter", url: "https://twitter.com/yourusername" },
  { name: "Instagram", url: "https://instagram.com/yourusername" },
];
---

<footer
  class="bg-neutral-50 dark:bg-neutral-800 transition-colors duration-300 border-t border-gray-200 dark:border-gray-700"
>
  <div class="container-custom py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <h3 class="text-lg font-semibold mb-4">About</h3>
        <p class="text-gray-600 dark:text-gray-400 mb-4">
          A professional portfolio showcasing my work and expertise in design
          and development.
        </p>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Links</h3>
        <ul class="space-y-2">
          <li>
            <a
              href="/"
              class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >Home</a>
          </li>
          <li>
            <a
              href="/#about"
              class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >About</a>
          </li>
          <li>
            <a
              href="/#projects"
              class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >Projects</a>
          </li>
          <li>
            <a
              href="/blog"
              class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >Blog</a>
          </li>
          <li>
            <a
              href="/#contact"
              class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
              >Contact</a>
          </li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Connect</h3>
        <ul class="flex space-x-4">
          {
            socialLinks.map((link) => (
              <li>
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-gray-600 dark:text-gray-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-600 dark:text-gray-400">
          &copy; {currentYear} Your Name. All rights reserved.
        </p>
        <p class="text-gray-600 dark:text-gray-400 mt-4 md:mt-0">
          Built with <a
            href="https://astro.build"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-600 dark:text-primary-400 hover:underline"
            >Astro</a
          >
        </p>
      </div>
    </div>
  </div>
</footer>
