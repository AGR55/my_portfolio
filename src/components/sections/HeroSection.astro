---
import { Icon } from "astro-icon/components";

// You can customize these details
const name = "Adriano Gonzalez Reyes";
const title = "Software Developer";
const description =
  "I build beautiful digital experiences with a focus on user experience, accessibility, and performance.";

// Social links
const socialLinks = [
  { name: "GitHub", url: "https://github.com/AGR55", icon: "mdi:github" },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/yourprofile",
    icon: "mdi:linkedin",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/yourhandle",
    icon: "mdi:twitter",
  },
];
---

<section
  id="hero"
  class="pt-32 pb-16 md:pt-40 md:pb-32 relative overflow-hidden"
>
  <!-- Decorative background elements (matching About section) -->
  <div
    class="absolute top-1/4 left-0 -translate-x-1/2 w-[40rem] h-[40rem] rounded-full bg-primary-200/50 dark:bg-primary-900/20 blur-3xl opacity-50 dark:opacity-30 -z-10"
  >
  </div>
  <div
    class="absolute bottom-0 right-0 translate-x-1/3 w-[30rem] h-[30rem] rounded-full bg-primary-300/40 dark:bg-primary-800/20 blur-3xl opacity-50 dark:opacity-30 -z-10"
  >
  </div>

  <div class="container-custom relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-center">
      <!-- Left content column -->
      <div class="lg:col-span-7 order-2 lg:order-1">
        <p
          class="text-primary-600 dark:text-primary-400 heading-lg mb-4 animate-fade-in flex items-center gap-2"
        >
          Hello, I'm {name}
        </p>

        <div class="flex items-center mb-4">
          <span
            class="relative inline-flex overflow-hidden rounded-full p-[1px]"
          >
            <span
              class="absolute inset-[-1000%] animate-[spin_4s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#FFFFFF_0%,#000010_50%,#FFFFFF_100%)]"
            ></span>
            <div
              class="inline-flex items-center justify-center w-full px-3 py-1 text-sm text-blue-800 bg-blue-100 rounded-full cursor-pointer dark:bg-neutral-800 dark:text-white/80 backdrop-blur-3xl whitespace-nowrap"
            >
              <h2 class="text-gray-700 dark:text-gray-300">
                Available to work
              </h2>
            </div>
          </span>
        </div>

        <p
          class="body-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl animate-slide-up"
          style="animation-delay: 300ms"
        >
          {description}
        </p>

        <div
          class="flex flex-wrap gap-4 mb-12 animate-slide-up"
          style="animation-delay: 400ms"
        >
          <a
            href="#projects"
            class="inline-flex items-center px-6 py-3 rounded-full bg-blue-500 hover:bg-blue-600 text-white font-medium transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            <Icon name="lucide:folder" class="mr-2 h-5 w-5" />
            View Projects
          </a>
          <a
            href="#contact"
            class="inline-flex items-center px-6 py-3 rounded-full bg-white dark:bg-gray-800 text-gray-900 dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700 font-medium transition-colors duration-300 border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg"
          >
            <Icon name="lucide:mail" class="mr-2 h-5 w-5" />
            Contact Me
          </a>
        </div>
      </div>

      <!-- Right image/decoration column -->
      <div
        class="lg:col-span-5 order-1 lg:order-2 flex justify-center lg:justify-end animate-fade-in"
      >
        <div class="w-64 h-64 md:w-80 md:h-80 relative">
          <!-- Decorative code blocks -->
          <div
            class="absolute bottom-25 -left-26 w-48 h-24 bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-xl p-4 shadow-lg border border-gray-100/50 dark:border-gray-700/50 transform -rotate-6 animate-slide-up"
            style="animation-delay: 200ms"
          >
            <div class="flex items-start gap-2">
              <div class="h-4 w-4 rounded-full bg-primary-500 shrink-0"></div>
              <div class="space-y-2">
                <div class="h-2 w-32 bg-gray-200 dark:bg-gray-700 rounded-full">
                </div>
                <div class="h-2 w-24 bg-gray-200 dark:bg-gray-700 rounded-full">
                </div>
                <div class="h-2 w-28 bg-gray-200 dark:bg-gray-700 rounded-full">
                </div>
              </div>
            </div>
          </div>

          <div
            class="absolute -bottom-10 -right-12 w-48 h-28 bg-white/80 dark:bg-gray-800/80 backdrop-blur-md rounded-xl p-4 shadow-lg border border-gray-100/50 dark:border-gray-700/50 transform rotate-6 animate-slide-up"
            style="animation-delay: 300ms"
          >
            <div class="space-y-2">
              <div class="h-2 w-full bg-gray-200 dark:bg-gray-700 rounded-full">
              </div>
              <div class="h-2 w-3/4 bg-gray-200 dark:bg-gray-700 rounded-full">
              </div>
              <div class="h-2 w-1/2 bg-gray-200 dark:bg-gray-700 rounded-full">
              </div>
              <div class="h-2 w-2/3 bg-gray-200 dark:bg-gray-700 rounded-full">
              </div>
            </div>
          </div>

          <!-- Main profile image - replace with your image -->
          <div
            class="w-full h-full rounded-full bg-gradient-to-br from-primary-100 to-primary-300 dark:from-primary-900 dark:to-primary-700 flex items-center justify-center border-8 border-white dark:border-gray-900 shadow-2xl overflow-hidden z-10"
          >
            <!-- Replace with your image -->
            <!-- 
            <div class="text-center text-primary-800 dark:text-primary-200">
              <Icon name="lucide:user" class="h-24 w-24 mx-auto mb-2" />
              <p class="text-sm font-medium">Your Photo</p>
            </div>
            -->
            <img
              src="/assets/Adriano.webp"
              alt="Adriano's profile picture"
              class="w-full h-full object-cover border border-white dark:border-gray-800 rounded-full shadow-lg"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
