---
import { Icon } from "astro-icon/components";

// Personaliza estos detalles
const name = "Adriano González";
const title = "Full Stack Developer";
const description =
  "I create elegant, high-performance web applications that deliver exceptional user experiences.";

// Redes sociales
const socialLinks = [
  {
    name: "GitHub",
    url: "https://github.com/username",
    icon: "mdi:github",
  },
  {
    name: "LinkedIn",
    url: "https://linkedin.com/in/username",
    icon: "mdi:linkedin",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/username",
    icon: "mdi:twitter",
  },
];
---

<section
  class="min-h-screen flex items-center justify-center relative overflow-hidden py-20"
>
  <!-- Fondo con gradiente y sutil oscuridad -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-neutral-950 via-neutral-900 to-neutral-950 -z-10"
  >
  </div>

  <!-- Sutil grid pattern como textura -->
  <div
    class="absolute inset-0 bg-[url('/images/grid-pattern.svg')] opacity-[0.03] -z-10"
  >
  </div>

  <!-- Efecto de viñeta sutil para mayor profundidad -->
  <div class="absolute inset-0 bg-radial-gradient -z-10"></div>

  <div class="container mx-auto px-6 md:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-0 items-center">
      <!-- Columna de texto -->
      <div class="lg:pr-8 animate-fade-in">
        <div
          class="inline-block mb-3 px-3 py-1 border border-neutral-700 bg-neutral-800/50 rounded-full text-neutral-400 text-sm tracking-wide"
        >
          <span
            class="animate-pulse-subtle mr-2 inline-block w-2 h-2 bg-neutral-400 rounded-full"
          ></span>
          Available for new projects
        </div>

        <h1
          class="text-4xl md:text-5xl xl:text-6xl font-bold text-white mb-6 tracking-tight"
        >
          <span class="block">Hello, I'm</span>
          <span class="text-gradient">{name}</span>
        </h1>

        <h2 class="text-2xl md:text-3xl font-medium text-neutral-300 mb-6">
          {title}
        </h2>

        <p
          class="text-lg md:text-xl text-neutral-400 max-w-lg mb-8 leading-relaxed"
        >
          {description}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap gap-4">
          <a
            href="#projects"
            class="px-6 py-3 rounded-lg bg-neutral-800 hover:bg-neutral-750 text-neutral-200 transition-colors duration-300 border border-neutral-700 shadow-subtle flex items-center gap-2"
          >
            <span>View Projects</span>
            <Icon name="lucide:arrow-down" class="h-4 w-4" />
          </a>

          <a
            href="#contact"
            class="px-6 py-3 rounded-lg border border-neutral-700 hover:border-neutral-600 text-neutral-300 hover:text-neutral-200 transition-colors duration-300 flex items-center gap-2"
          >
            <span>Contact Me</span>
            <Icon name="lucide:mail" class="h-4 w-4" />
          </a>
        </div>
      </div>

      <!-- Columna de imagen o ilustración -->
      <div class="animate-fade-in-delay">
        <!-- Versión minimalista con código o terminal -->
        <div class="w-full max-w-lg mx-auto relative">
          <!-- Terminal window mock -->
          <div
            class="rounded-lg overflow-hidden border border-neutral-700 shadow-lg bg-neutral-900"
          >
            <!-- Terminal header -->
            <div class="bg-neutral-800 px-4 py-2 flex items-center gap-2">
              <div class="flex gap-2 items-center">
                <div class="w-3 h-3 rounded-full bg-neutral-600"></div>
                <div class="w-3 h-3 rounded-full bg-neutral-600"></div>
                <div class="w-3 h-3 rounded-full bg-neutral-600"></div>
              </div>
              <div
                class="text-neutral-400 text-sm flex-1 text-center font-mono"
              >
                ~/portfolio
              </div>
            </div>

            <!-- Terminal content -->
            <div class="p-4 font-mono text-sm">
              <div class="flex">
                <span class="text-teal-600">$</span>
                <span class="ml-2 text-neutral-400">whoami</span>
              </div>
              <div class="text-neutral-200 mt-1">{name} | {title}</div>

              <div class="flex mt-3">
                <span class="text-teal-600">$</span>
                <span class="ml-2 text-neutral-400">skills --list</span>
              </div>
              <div class="text-blue-400 mt-1 flex flex-wrap gap-1">
                <span>["JavaScript",</span>
                <span>"TypeScript",</span>
                <span>"React",</span>
                <span>"Node.js",</span>
                <span>"Next.js",</span>
                <span>"Vue",</span>
                <span>"Astro",</span>
                <span>"... and more"]</span>
              </div>

              <div class="flex mt-3">
                <span class="text-teal-600">$</span>
                <span class="ml-2 text-neutral-400">status</span>
              </div>
              <div class="text-neutral-200 mt-1">
                Ready to collaborate on new projects
              </div>

              <div class="mt-3 flex items-center text-neutral-400">
                <span class="text-teal-600">$</span>
                <span class="ml-2">_</span>
                <span
                  class="ml-1 w-3 h-5 bg-neutral-400 inline-block animate-blink"
                ></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Botón para desplazar hacia abajo -->
  <a
    href="#about"
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 w-10 h-10 flex items-center justify-center rounded-full border border-neutral-700 text-neutral-400 hover:text-neutral-200 transition-colors duration-300 animate-bounce-subtle"
    aria-label="Scroll down"
  >
    <Icon name="lucide:chevron-down" class="h-5 w-5" />
  </a>
</section>

<style>
  /* Gradiente radial para efecto viñeta */
  .bg-radial-gradient {
    background-image: radial-gradient(
      circle at center,
      transparent 0%,
      rgba(10, 10, 10, 0.4) 100%
    );
  }

  /* Texto con gradiente */
  .text-gradient {
    background: linear-gradient(90deg, #ffffff, #a0a0a0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
  }

  /* Sombra sutil */
  .shadow-subtle {
    box-shadow: 0 4px 10px -3px rgba(0, 0, 0, 0.2);
  }

  /* Animaciones */
  @keyframes blink {
    0%,
    100% {
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
  }

  .animate-blink {
    animation: blink 1s infinite;
  }

  @keyframes bounce-subtle {
    0%,
    100% {
      transform: translateY(-25%);
    }
    50% {
      transform: translateY(25%);
    }
  }

  .animate-bounce-subtle {
    animation: bounce-subtle 2s infinite ease-in-out;
  }

  @keyframes pulse-subtle {
    0%,
    100% {
      opacity: 0.7;
    }
    50% {
      opacity: 1;
    }
  }

  .animate-pulse-subtle {
    animation: pulse-subtle 2s infinite;
  }

  /* Animaciones de entrada */
  .animate-fade-in {
    animation: fadeIn 1s ease forwards;
    opacity: 0;
  }

  .animate-fade-in-delay {
    animation: fadeIn 1s ease 0.3s forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
