---
import { Icon } from "astro-icon/components";

// Technical competencies with the same content
const techCompetencies = [
  {
    name: "Frontend Development",
    icon: "mdi:language-html5",
    description:
      "Development of attractive and responsive interfaces with HTML, CSS, JavaScript and modern frameworks.",
  },
  {
    name: "Mobile Apps",
    icon: "mdi:cellphone",
    description:
      "Development of native and cross-platform applications for iOS and Android with React Native and Flutter.",
  },
  {
    name: "Desktop Applications",
    icon: "mdi:desktop-mac-dashboard",
    description:
      "Software for Windows, macOS and Linux with Electron, .NET and native technologies.",
  },
  {
    name: "UI/UX Design",
    icon: "mdi:palette-swatch",
    description:
      "Design of attractive, accessible and user-centered experiences.",
  },
];
---

<section id="about" class="py-24 md:py-32 relative overflow-hidden">
  <!-- Fondo sutil con gradiente lineal vertical -->
  <div class="absolute inset-0 bg-neutral-950 -z-10"></div>

  <!-- Elemento decorativo - línea horizontal -->
  <div class="absolute left-0 top-0 w-full h-px bg-gradient-to-r from-transparent via-neutral-800 to-transparent"></div>
  
  <!-- Elemento decorativo minimalista - línea vertical -->
  <div class="absolute left-0 top-1/2 -translate-y-1/2 h-64 w-px bg-gradient-to-b from-transparent via-neutral-700 to-transparent opacity-30"></div>
  <div class="absolute right-0 top-1/2 -translate-y-1/2 h-64 w-px bg-gradient-to-b from-transparent via-neutral-700 to-transparent opacity-30"></div>

  <div class="container mx-auto px-6 md:px-8 max-w-6xl relative">
    <!-- Two column layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
      <!-- Left column: About Me Section -->
      <div class="lg:col-span-7 mb-10 lg:mb-0 animate-on-scroll">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-1 h-12 bg-gradient-to-b from-neutral-700 to-neutral-600"></div>
          <h2 class="text-3xl font-bold text-neutral-200">About Me</h2>
        </div>
        <div class="max-w-3xl space-y-6">
          <p class="prose dark:prose-invert text-lg">
            Hello! I’m an <span
              class="font-semibold text-neutral-100"
              >enthusiastic and creative frontend developer</span
            > with over two years of experience designing digital
            solutions that blend usability, performance, and refined
            aesthetics. My passion for technology began at 20, when
            I built my very first website. Since then, I’ve explored
            a variety of programming languages and tools—always
            driven by a love of learning and continuous improvement.
          </p>
          <p class="prose dark:prose-invert text-lg">
            I excel at delivering projects with interfaces that adapt
            seamlessly to any device, backed by clean, well‑structured, 
            and easily scalable code. I’m a collaborative, goal‑oriented 
            teammate, committed to crafting products that deliver real 
            value and exceed expectations.
          </p>
          <p class="prose dark:prose-invert text-lg">
            Off the keyboard, you’ll find me working out at home, diving 
            into movies and series, expanding my skills through online 
            courses and books, or gaming casually—always on the lookout 
            for my next challenge!
          </p>

          <!-- Resume button -->
          <a
            href="/cv/Adriano Gonzalez Reyes - CV.pdf"
            class="inline-block px-6 py-3 rounded-lg bg-neutral-800 text-neutral-200 border border-neutral-700 hover:bg-neutral-750 transition-colors duration-200"
          >
            <div class="flex items-center gap-2">
              <svg
                class="h-5 w-5"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                ></path>
              </svg>
              <span>Download CV</span>
            </div>
          </a>
        </div>
      </div>

      <!-- Right column: Skills Section -->
      <div class="lg:col-span-5 animate-on-scroll" style="transition-delay: 0.2s">
        <div class="flex items-center gap-3 mb-8">
          <div class="w-1 h-12 bg-gradient-to-b from-neutral-700 to-neutral-600"></div>
          <h2 class="text-3xl font-bold text-neutral-200">
            Technical Expertise
          </h2>
        </div>

        <!-- Grid-style skills -->
        <div class="space-y-4">
          {
            techCompetencies.map((skill) => (
              <div class="bg-neutral-800/50 rounded-lg p-4 border border-neutral-700/30">
                <div class="flex items-start gap-3 mb-2">
                  <Icon
                    name={skill.icon}
                    class="h-5 w-5 text-neutral-400 mt-1"
                  />
                  <h3 class="text-lg font-semibold text-neutral-200">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-neutral-400 text-sm pl-8">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animación sutil */
  .animate-on-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  
  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
