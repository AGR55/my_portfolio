---
import { Icon } from "astro-icon/components";

// Technical competencies instead of languages
const techCompetencies = [
  {
    name: "Frontend Development",
    icon: "mdi:language-html5",
    description:
      "Development of attractive and responsive interfaces with HTML, CSS, JavaScript and modern frameworks.",
  },
  {
    name: "Mobile Apps",
    icon: "mdi:cellphone",
    description:
      "Development of native and cross-platform applications for iOS and Android with React Native and Flutter.",
  },
  {
    name: "Desktop Applications",
    icon: "mdi:desktop-mac-dashboard",
    description:
      "Software for Windows, macOS and Linux with Electron, .NET and native technologies.",
  },
  {
    name: "UI/UX Design",
    icon: "mdi:palette-swatch",
    description:
      "Design of attractive, accessible and user-centered experiences.",
  },
];
---

<section id="about" class="relative section-padding overflow-hidden">
  <div
    class="absolute bottom-[15%] right-[17.5%] w-[30rem] h-[30rem] rounded-full bg-indigo-600/10 blur-3xl z-0"
  >
  </div>
  <!-- Decorative background elements -->
  <div
    class="absolute top-0 right-0 -translate-y-1/4 translate-x-1/4 w-96 h-96 rounded-full bg-primary-200 dark:bg-primary-900/30 blur-3xl opacity-50 dark:opacity-30"
  >
  </div>
  <div
    class="absolute bottom-0 left-0 translate-y-1/4 -translate-x-1/4 w-96 h-96 rounded-full bg-primary-300 dark:bg-primary-800/30 blur-3xl opacity-50 dark:opacity-30"
  >
  </div>

  <div class="container-custom relative z-10">
    <!-- Two column layout -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
      <!-- Left column: About Me Section -->
      <div class="lg:col-span-7 mb-10 lg:mb-0 animate-on-scroll">
        <div class="flex items-center gap-3 mb-8">
          <Icon
            name="lucide:user"
            class="h-8 w-8 text-primary-600 dark:text-primary-400"
          />
          <h2 class="heading-lg text-neutral-900 dark:text-white">About Me</h2>
        </div>

        <div class="max-w-3xl">
          <p class="prose dark:prose-invert leading-relaxed text-xl mb-6">
            Hi there! I'm a <span
              class="font-semibold text-primary-600 dark:text-primary-400"
              >passionate technology architect and developer</span
            > with over 5 years of experience creating beautiful, functional, and
            user-friendly applications.
          </p>
          <p
            class="prose dark:prose-invert text-neutral-700 dark:text-neutral-300 leading-relaxed text-xl mb-6"
          >
            My journey in tech began when I built my first website at the age of
            15. Since then, I've worked with various technologies and
            frameworks, always striving to learn and grow as a developer.
          </p>
          <p
            class="prose dark:prose-invert text-neutral-700 dark:text-neutral-300 leading-relaxed text-xl mb-6"
          >
            I specialize in creating responsive web applications with clean,
            maintainable code. My focus is on delivering high-quality solutions
            that provide real value to users.
          </p>
          <p
            class="prose dark:prose-invert text-neutral-700 dark:text-neutral-300 leading-relaxed text-xl mb-10"
          >
            When I'm not coding, you can find me hiking, reading science
            fiction, or experimenting with new recipes in the kitchen.
          </p>

          <!-- Fixed button for dark mode -->
          <a
            href="/resume.pdf"
            class="inline-flex items-center px-6 py-3 rounded-full bg-blue-500 hover:bg-blue-600 text-white font-medium transition-colors duration-300 shadow-lg hover:shadow-xl"
          >
            <svg
              class="mr-2 h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            Download Resume
          </a>
        </div>
      </div>

      <!-- Right column: Skills Section -->
      <div
        class="lg:col-span-5 animate-on-scroll"
        style="transition-delay: 0.1s"
      >
        <div class="flex items-center gap-3 mb-8">
          <Icon
            name="lucide:code"
            class="h-8 w-8 text-primary-600 dark:text-primary-400"
          />
          <h2 class="heading-lg text-neutral-900 dark:text-white">
            Technical Expertise
          </h2>
        </div>

        <!-- Grid-style skills (2 columns) -->
        <div class="flex flex-col gap-4">
          {
            techCompetencies.map((skill) => (
              <div class="bg-white/20 dark:bg-neutral-800/20 backdrop-blur-xl rounded-xl p-5 shadow-md hover:shadow-lg transition-all duration-300 border border-neutral-100/30 dark:border-neutral-700/30">
                <div class="flex items-start gap-3 mb-3">
                  <Icon
                    name={skill.icon}
                    class="h-5 w-5 text-primary-600 dark:text-primary-400 mt-1"
                  />
                  <h3 class="text-lg font-bold text-neutral-900 dark:text-white">
                    {skill.name}
                  </h3>
                </div>
                <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                  {skill.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Animation styles */
  .animate-on-scroll {
    opacity: 1;
    transform: translateY(0);
    transition:
      opacity 0.8s ease-out,
      transform 0.8s ease-out;
  }

  .js-enabled .animate-on-scroll {
    opacity: 0;
    transform: translateY(30px);
  }

  .animate-on-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Animation script
  document.documentElement.classList.add("js-enabled");

  function makeVisible() {
    document.querySelectorAll(".animate-on-scroll").forEach((el) => {
      setTimeout(() => {
        el.classList.add("visible");
      }, 100);
    });
  }

  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(makeVisible, 300);
  });
</script>
